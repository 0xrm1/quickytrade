# Environment
NODE_ENV=development

# API Gateway Configuration
API_GATEWAY_PORT=5000
CORS_ORIGIN=http://localhost:3000

# Auth Service Configuration
AUTH_SERVICE_PORT=5002
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=24h

# Binance API Service Configuration
BINANCE_API_PORT=5001
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
PRICE_CHANGE_THRESHOLD=0.1
VOLUME_CHANGE_THRESHOLD=1.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/quickytrade

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=debug

# SSL Configuration (Development)
SSL_CERT_PATH=./nginx/ssl/quickytrade.crt
SSL_KEY_PATH=./nginx/ssl/quickytrade.key

# JWT Configuration
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_here

# Service URLs
AUTH_SERVICE_URL=http://localhost:5002
BINANCE_API_SERVICE_URL=http://localhost:5001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Server Configuration
PORT=5000

# WebSocket Configuration
WS_RECONNECT_INTERVAL=3600000 # 1 hour in milliseconds

# Cache Configuration
PRICE_CACHE_PERCENTAGE_THRESHOLD=0.5
PRICE_CACHE_ABSOLUTE_THRESHOLD=10
PRICE_CACHE_TIME_THRESHOLD=60000 # 1 minute in milliseconds

# API Cache TTL (in seconds)
TICKER_CACHE_TTL=60
KLINES_CACHE_TTL=300
MARKET_CACHE_TTL=60
EXCHANGE_INFO_CACHE_TTL=3600
DEPTH_CACHE_TTL=10
TRADES_CACHE_TTL=30 